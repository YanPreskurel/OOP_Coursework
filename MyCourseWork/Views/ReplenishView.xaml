<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyCourseWork.Views.ReplenishView"
             Title="ReplenishView"
             BackgroundColor="Violet">

    <Grid Margin="60">
        
        <VerticalStackLayout VerticalOptions="Center" Spacing="25">

            <Label
            Text="Enter the amount to replenish the balance"
            TextColor="Black"
            FontSize="25"
            HorizontalTextAlignment="Center"
            Grid.Row="0"
            />

            <Entry
            x:Name="Replenish"    
            TextChanged="Replenish_TextChanged"
            Completed="Replenish_TextCompleted"
            Placeholder="Entry"
            PlaceholderColor="LightGray"
            FontSize="32"
            HeightRequest="80"           
            ClearButtonVisibility="WhileEditing"
            HorizontalTextAlignment="Start"
            VerticalTextAlignment="Center"
            Grid.Row="1" />

            <Button
                x:Name="ReplenishButton"
                Text="Replenish"
                FontSize="32"
                TextColor="White"
                Clicked="OnClickedReplenish_"
                WidthRequest="200"
                HeightRequest="60"
                />
        </VerticalStackLayout>
        
    </Grid>
    
</ContentPage>