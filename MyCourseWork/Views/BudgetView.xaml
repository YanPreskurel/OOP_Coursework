<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyCourseWork.Views.BudgetView"
             Title="BudgetView"
             BackgroundColor="Violet">
    <Grid Margin="20">

        <HorizontalStackLayout HorizontalOptions="Center" Spacing="50" Grid.Row="0">

            <ScrollView>
                <ListView
                    x:Name="IncomesView"
                    />
            </ScrollView>

            <ScrollView>

                <ListView
                    x:Name="ExpensesView"
                    />
            </ScrollView>

        </HorizontalStackLayout>

    </Grid>

</ContentPage>